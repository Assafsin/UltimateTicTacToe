<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1F1"
    android:orientation="vertical"
    tools:context=".AddPlayers">

    <ImageView
        android:id="@+id/imgBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/btnback" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="85dp" />

    <TextView
        android:id="@+id/tvHead"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="PLAERS NAMES"
        android:textColor="#E91E63"
        android:textSize="24sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="85dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgContact1"
            android:layout_width="100dp"
            android:layout_height="81dp"
            android:layout_weight="1"
            app:srcCompat="@android:drawable/ic_menu_my_calendar" />

        <EditText
            android:id="@+id/edPlayer1"
            android:layout_width="309dp"
            android:layout_height="83dp"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="text"
            android:hint="Please Enter First Player's name"
            android:textColor="#FF5722" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgContact2"
            android:layout_width="100dp"
            android:layout_height="81dp"
            android:layout_weight="1"
            app:srcCompat="@android:drawable/ic_menu_my_calendar" />

        <EditText
            android:id="@+id/edPlayer2"
            android:layout_width="309dp"
            android:layout_height="83dp"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="text"
            android:hint="Please Enter Second Player's name"
            android:textColor="#FF5722" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imgStart"
        android:layout_width="127dp"
        android:layout_height="93dp"
        android:layout_gravity="center"

        app:srcCompat="@drawable/starticon" />

</LinearLayout>